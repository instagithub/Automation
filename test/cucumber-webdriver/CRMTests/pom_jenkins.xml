<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>com.pega</groupId>
	<artifactId>CRMTests</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<name>CRMTests</name>
	<description>project for CRM tests</description>
	<properties>
		<build.dir>target</build.dir>
		<reportsDir>LatestReports</reportsDir>
		<testReportsDir>${reportsDir}/${tags}</testReportsDir>
		<buildName>${BUILD_DISPLAY_NAME}- ${team.name}</buildName>
		<archived.reportsDir>${basedir}/ArchivedReports/${buildName}</archived.reportsDir>
		<testSourceDir>config</testSourceDir>
		<testResourceDir>CS</testResourceDir>
		<testResourceDir2>SA</testResourceDir2>
	</properties>
	
	<repositories> 
    <repository> 
      <id>meshbinhyd</id> 
      <name>meshbinhyd-releases</name> 
      <releases> 
        <enabled>true</enabled> 
        <updatePolicy>never</updatePolicy> 
        <checksumPolicy>warn</checksumPolicy> 
      </releases> 
      <snapshots> 
        <enabled>true</enabled> 
        <updatePolicy>never</updatePolicy> 
        <checksumPolicy>warn</checksumPolicy> 
      </snapshots> 
      <url>https://meshbinhyd.pega.com/artifactory/miautomation-utils-local</url> 
      <layout>default</layout> 
    </repository> 
    
    <repository>
			<id>meshbincam</id>
			<name>repo2-meshbincam</name>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>never</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
			<url>https://meshbincam.pega.com/artifactory/repo2/</url>
			<layout>default</layout>
		</repository>
		
		<repository>
			<id>meshbinhydaes</id>
			<name>meshbinhyd-releases</name>
			<releases>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</releases>
			<snapshots>
				<enabled>true</enabled>
				<updatePolicy>always</updatePolicy>
				<checksumPolicy>warn</checksumPolicy>
			</snapshots>
			<url>https://meshbinhyd.pega.com/artifactory/aesautomation-utils-local</url>
			<layout>default</layout>
		</repository>
  </repositories>
  <profiles>
		<profile>
			<id>Cucumber</id>
			<activation>
				<property>
					<name>runMode</name>
					<value>Cucumber</value>
				</property>
			</activation>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.18</version>
						<configuration>
							<systemPropertyVariables>
								<runMode>${runMode}</runMode>
								<testReportsDir>${testReportsDir}</testReportsDir>
							</systemPropertyVariables>
							<argLine>-Dcucumber.options=" --tags "${tags}"
								--plugin pretty
								--plugin junit:"${testReportsDir}"/cucumber-junitreport.xml
								--plugin json:"${testReportsDir}"/cucumber-report.json"
								-Dguice.injector-source=com.pega.config.GuiceInjector</argLine>
							<reportsDirectory>${testReportsDir}/surefire-reports</reportsDirectory>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>DryRun</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-surefire-plugin</artifactId>
						<version>2.18</version>
						<configuration>
							<systemPropertyVariables>
								<runMode>${runMode}</runMode>
								<reportsDir>${reportsDir}</reportsDir>
							</systemPropertyVariables>
							<argLine>-Dcucumber.options=" --tags "${tags}" --plugin pretty
								--dry-run"</argLine>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>Config</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.3.2</version>
						<executions>
							<execution>
								<id>Configuration</id>
								<phase>validate</phase>
								<goals>
									<goal>java</goal>
								</goals>
								<configuration>
									<killAfter>-1</killAfter>
									<mainClass>com.pega.config.Configuration</mainClass>
									<classpathScope>compile</classpathScope>
									<commandlineArgs>${tags}</commandlineArgs>
									<includePluginDependencies>true</includePluginDependencies>
								</configuration>
							</execution>							
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>PostBuildTasks</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.3.2</version>
						<executions>
							<execution>
								<id>PostBuildTasks</id>
								<phase>validate</phase>
								<goals>
									<goal>java</goal>
								</goals>
								<configuration>
									<killAfter>-1</killAfter>
									<mainClass>com.pega.config.PostBuildTasks</mainClass>
									<classpathScope>compile</classpathScope>
									<includePluginDependencies>true</includePluginDependencies>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>Reporter</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.3.2</version>
						<executions>
							<execution>
								<id>Reporter</id>
								<phase>validate</phase>
								<goals>
									<goal>java</goal>
								</goals>
								<configuration>
									<killAfter>-1</killAfter>
									<mainClass>com.pega.config.util.ReportWriter</mainClass>
									<commandlineArgs>${tags}</commandlineArgs>
									<includePluginDependencies>false</includePluginDependencies>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
	<build>
		<directory>${build.dir}</directory>
		<testSourceDirectory>${testSourceDir}</testSourceDirectory>
		<testResources>
			<testResource>
				<directory>${testResourceDir}</directory>
				<includes>
					<include>**/*.feature</include>
				</includes>
			</testResource>
			<testResource>
				<directory>${testResourceDir2}</directory>
				<includes>
					<include>**/*.feature</include>
				</includes>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-enforcer-plugin</artifactId>
				<version>1.3.1</version>
				<executions>
					<execution>
						<phase>pre-clean</phase>
						<id>enforce-property</id>
						<goals>
							<goal>enforce</goal>
						</goals>
						<configuration>
							<rules>
								<requireProperty>
									<property>tags</property>
									<regex>^[@].*$</regex>
									<message>Tag is not defined!!!</message>
									<regexMessage>Invalid tag!! Tag must start with '@'</regexMessage>
								</requireProperty>
							</rules>
							<fail>true</fail>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>add-source</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>add-source</goal>
						</goals>
						<configuration>
							<sources>
								<source>${basedir}/${testSourceDir}</source>
								<source>${basedir}/${testSourceDir2}</source>
								<source>${basedir}/stepdefs</source>
								<source>${basedir}/${testResourceDir}</source>
								<source>${basedir}/${testResourceDir2}</source>
								<source>${basedir}/../CRMFramework/src</source>
								<source>${basedir}/../CRMFramework/core.impl</source>
								<source>${basedir}/../CS</source>
								<source>${basedir}/../SA</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-appCtx</id>
						<phase>install</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<outputDirectory>${archived.reportsDir}</outputDirectory>
							<overwrite>true</overwrite>
							<resources>
								<resource>
									<directory>${reportsDir}</directory>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.6.1</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>${reportsDir}</directory>
							<followSymlinks>false</followSymlinks>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>
